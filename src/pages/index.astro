---
import Layout from '@/layouts/Layout.astro';
import Card from '@/components/Card.astro';
import Social from '@/components/Social.astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import astro_svg from '@/data/images/astro.svg';
import Email from '@/components/links/Email.astro';
import { siteConfig } from '@/config';

// Language
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Layout title="Welcome" activeNav="koti">
	<main>
		<a
			href="https://github.com/jere-a/Main-website"
			class="github-corner"
			aria-label="View source on GitHub"
		>
			<svg
				width="80"
				height="80"
				viewBox="0 0 250 250"
				style="fill:#151513; color:#fff; position: absolute; top: 0; border: 0; right: 0;"
				aria-hidden="true"
				><path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path><path

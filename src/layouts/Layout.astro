---
import { getLocale } from "astro-i18n-aut";
import CommonHead from "@/components/CommonHead.astro";
import NavMenu from "@/components/nav-menu.astro";
import Cookies from "@/components/cookies.astro";
import Footer from "@/components/Footer.astro";
import ReloadPrompt from "../components/ReloadPrompt.astro";
import SplashCursor from "@/components/ui/SplashCursor";

// import { ModeToggle } from '@/components/react/ModeToggle';

// configs
import { siteConfig } from "../config";

interface Props {
  title?: string;
  isNavbar?: boolean;
  isFooter?: boolean;
  isDark?: boolean;
  isCSS?: boolean;
  isSplash?: boolean;
  isCopyright?: boolean;
  activeNav?: string;
}

const {
  title,
  isNavbar = true,
  isFooter = true,
  isDark = true,
  isCSS = true,
  isSplash = true,
  activeNav,
} = Astro.props;
const lang = getLocale(Astro.url).toLowerCase();
---

<html class:list={[{dark: isDark}]} lang={lang}>
	<head>
    <CommonHead title={title}>
    </CommonHead>
    <slot name="head" />
	</head>
  <body>
    {
    false && <SplashCursor client:idle client:only="react" /> 
    }
	  { isNavbar && (
    	<div class="NavMenu">
   		  <header>
    			<NavMenu active={activeNav} transition:persist></NavMenu>
   		  </header>
    	</div>
    )}
    <slot />
		{siteConfig.params.cookies.cookiesEnabled && <Cookies/>}
		<ReloadPrompt />
		{ isFooter && <Footer transition:persist /> }
		{
			false && (
					<div
						style="visibility: hidden;"
						data-sitekey="0x4AAAAAAAbhEsfftzTNsmMO"
						data-theme="dark"
					/>
					<noscript>
						<iframe
							src="https://www.googletagmanager.com/ns.html?id=GTM-P6SH88WW"
							height="0"
							width="0"
							style="display:none;visibility:hidden"
						/>
					</noscript>
			)
		}
		{
			false && (
				<script
					is:inline
					src="https://challenges.cloudflare.com/turnstile/v0/api.js"
					defer
				/>
			)
      }
    <script src="../ts/pages/layout.mts"></script>
	</body>
</html>


<style>
  body {
    overflow: hidden;
    margin: 0rem;
  }

  @keyframes rotate {
    from {
      rotate: 0deg;
    }
  
    50% {
      scale: 1 1.5;
    }
  
    to {
      rotate: 360deg;
    }
  }
</style>

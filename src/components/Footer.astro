---
const year = new Date().getFullYear();

interface Props {
	isCopyright?: boolean;
}

const insert_year = () => {
	if (year === 2024) return;
	return `-${year}`;
};

const isCopyright = (): boolean => {
	const { isCopyright } = Astro.props;
	if (isCopyright == null) {
		return true;
	} else {
		return isCopyright;
	}
};
---


<div id="glow">
    <div id="blob"></div>
    <div id="blur"></div>
</div>

<script>
  const blob = document.getElementById("blob");
  
  window.onpointermove = event => { 
    const { clientX, clientY } = event;
    if (blob) {
      blob.animate({
        left: `${clientX}px`,
        top: `${clientY}px`
      }, { duration: 3000, fill: "forwards" });
    }
  }
</script>

<style>
    @keyframes rotate {
        from {
            rotate: 0deg;
        }
        
        50% {
            scale: 1 1.5;
        }
        
        to {
            rotate: 360deg;
        }
    }
    
    #glow {
        overflow: hidden;
    }
    
    #blob {
        background-color: white;
        height: 34vmax;
        aspect-ratio: 1;
        position: absolute;
        left: 50%;
        top: 50%;
        translate: -50% -50%;
        border-radius: 50%;
        background: linear-gradient(to right, aquamarine, mediumpurple);
        animation: rotate 20s infinite;
        opacity: 0.8;
        z-index: -2;
    }
    
    #blur {
        height: 100%;
        width: 100%;
        position: absolute;
        z-index: -1;
        backdrop-filter: blur(12vmax);
    }
</style>
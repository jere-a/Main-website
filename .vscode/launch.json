{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "./node_modules/.bin/astro dev",
      "name": "Development server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost:4321/index.html",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Brave",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:4321",
      "port": 9222,
      "linux": {
        "runtimeExecutable": "/usr/bin/brave"
      }
    }
  ]
}
